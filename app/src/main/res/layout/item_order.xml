<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/item_order_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="left"
                        android:src="@drawable/transfer" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_order_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TT"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_order_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y2018"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/item_order_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20000"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/item_order_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="mo ta ngan"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_order_address_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giao tu"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_order_address_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dia chi den"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:text="2018/11/25 14:57"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>